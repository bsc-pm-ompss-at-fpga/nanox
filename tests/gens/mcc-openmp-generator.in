#!/bin/bash

if [ x@MCC_SUPPORT@ = xyes ];
then
cat <<EOF

SRC=@SRCDIR@/src
BUILD=@BUILDDIR@/src

PERFO_CFLAGS=@PERFO_CFLAGS@
PERFO_CXXFLAGS=@PERFO_CXXFLAGS@
DEBUG_CFLAGS=@DEBUG_CFLAGS@
DEBUG_CXXFLAGS=@DEBUG_CXXFLAGS@
INSTR_CFLAGS=@INSTR_CFLAGS@
INSTR_CXXFLAGS=@INSTR_CXXFLAGS@
INSTRDEBUG_CFLAGS=@INSTRDEBUG_CFLAGS@
INSTRDEBUG_CXXFLAGS=@INSTRDEBUG_CXXFLAGS@

PLUGINS_performance=@PLUGINS_PERFORMANCE@
PLUGINS_debug=@PLUGINS_DEBUG@
PLUGINS_instrumentation=@PLUGINS_INSTRUMENTATION@
PLUGINS_instrumentation_debug=@PLUGINS_INSTRUMENTATION_DEBUG@

common_includes="-I\$SRC/core -I\$SRC/apis/c -I\$SRC/pms/openmp -I\$SRC/../tests/test/pfm"

compile_versions="@COMPILE_VERSIONS@"

#test_CC=@CONFIG_CC@
test_CC=@MCC@
test_CXX=@MCC@

test_CFLAGS="\$common_includes --nanox"
test_CXXFLAGS="\$common_includes --nanox"

test_CFLAGS_performance="\$PERFO_CFLAGS"
test_CXXFLAGS_performance="\$PERFO_CXXFLAGS"
test_CFLAGS_debug="\$DEBUG_CFLAGS --debug"
test_CXXFLAGS_debug="\$DEBUG_CXXFLAGS --debug"
test_CFLAGS_instrumentation="\$INSTR_CFLAGS --instruments"
test_CXXFLAGS_instrumentation="\$INSTR_CXXFLAGS --instruments"
test_CFLAGS_instrumentation_debug="\$INSTRDEBUG_CFLAGS"
test_CXXFLAGS_instrumentation_debug="\$INSTRDEBUG_CXXFLAGS"

test_LDFLAGS_performance="@LDFLAGS@ \$BUILD/pms/performance/.libs/libnanox-omp.so \$BUILD/apis/performance/.libs/libnanox-c.so \$BUILD/core/performance/.libs/libnanox.so -pthread -lrt"
test_ENV_performance="LD_LIBRARY_PATH=\$BUILD/core/performance/.libs:\$BUILD/apis/performance/.libs/:\$BUILD/pms/performance/.libs:\$PLUGINS_performance:$LD_LIBRARY_PATH"

test_LDFLAGS_debug="@LDFLAGS@ \$BUILD/pms/debug/.libs/libnanox-omp.so \$BUILD/apis/debug/.libs/libnanox-c.so \$BUILD/core/debug/.libs/libnanox.so -pthread -lrt"
test_ENV_debug="LD_LIBRARY_PATH=\$BUILD/core/debug/.libs:\$BUILD/apis/debug/.libs/:\$BUILD/pms/debug/.libs:\$PLUGINS_debug:$LD_LIBRARY_PATH"

test_LDFLAGS_instrumentation="@LDFLAGS@ \$BUILD/pms/instrumentation/.libs/libnanox-omp.so \$BUILD/apis/instrumentation/.libs/libnanox-c.so \$BUILD/core/instrumentation/.libs/libnanox.so -pthread -lrt"
test_ENV_instrumentation="LD_LIBRARY_PATH=\$BUILD/core/instrumentation/.libs:\$BUILD/apis/instrumentation/.libs/:\$BUILD/pms/instrumentation/.libs/:\$PLUGINS_instrumentation:$LD_LIBRARY_PATH"

test_LDFLAGS_instrumentation_debug="@LDFLAGS@ \$BUILD/pms/instrumentation-debug/.libs/libnanox-omp.so \$BUILD/apis/instrumentation-debug/.libs/libnanox-c.so \$BUILD/core/instrumentation-debug/.libs/libnanox.so -pthread -lrt"
test_ENV_instrumentation_debug="LD_LIBRARY_PATH=\$BUILD/core/instrumentation-debug/.libs:\$BUILD/apis/instrumentation-debug/.libs/:\$BUILD/pms/instrumentation-debug/.libs/:\$PLUGINS_instrumentation_debug:$LD_LIBRARY_PATH"

`@SRCDIR@/tests/gens/config.py $*`
EOF

else

cat <<EOF
test_ignore=yes
EOF

fi
